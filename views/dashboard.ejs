
<%-include('header.ejs')-%>
<style>
    body{
      background-image: linear-gradient(to right, #3b2d2d, #4a323b, #523950, #4d4569, #345481);
    }
     </style>
     
<nav class="navbar navbar-expand-lg navbar-secondary bg-secondary p-4">

  <div class="collapse navbar-collapse d-flex justify-content-between" id="navbarNav">
    <a class="navbar-brand mx-auto  " id="mishal" href="#">MALAYALAM MOVIES</a>
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="btn btn-dark rounded-pill me-4" href="/logout" id="loggo">LOGOUT</a>
      </li>
    </ul>
  </div>
</nav>

<section>
  <div class="container mt-4" >

    <div class="row ms-5 card-text mb-5" >
    <% movies.forEach(function(movies) { %>
       
        <div class="col-md-3 me-5 gx-5 gy-5 mt-4 d-flex justify-content-between " >
        
        <div class="card    shadow-lg  " style="width: 18rem; ">
            <img class="card-img-top mt-3 ms-3 ml-3" src="<%= movies.src %>" alt="Card image cap" style="height: 18em; width: 90%; object-fit: contain;">
            <div class="card-body text-center bg-body-tertiary" style="height: 12em;">
                <h5 class="pt-4 card-title  fw-bold"><%= movies.name %></h5>
                <p class="pt-2 text-center  card-text desc "><%= movies.descrption %></p>
                <a href="#" class="btn justify-content-center  btn-dark shadow-lg  btn-card  ">Watch Now</a>
                
                
            </div>
        </div>
    </div>
    <% }); %>
</div>
</div>
</section>

</div>
</div>
<%-include('footer.ejs')-%>